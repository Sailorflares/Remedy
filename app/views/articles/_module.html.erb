<div class="modal fade article-modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <%= form_for @article, :url => create_article_path, :html => {:method => :post} do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Add an Article</h4>
        </div>
        <div class="modal-body">
            <%= f.label :link, "Link:" %>
            <%= f.text_field :link %>
            <%= submit_tag "Create" %>    
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary" name="commit">Create</button>
        </div>
      <% end %>
    </div>
  </div>
</div>