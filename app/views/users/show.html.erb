<h1>Home Page</h1>

<div id="add-actionables">
  <h3>Add an Action</h3>
  <%= form_for @actionable, :url => create_actionable_path, :html => {:method => :post} do |f| %>
    <%= f.label :title, "Title:" %>
    <%= f.text_field :title %><br>
    <%= f.label :text, "Description:" %>
    <%= f.text_field :text%><br>
    <%= submit_tag "Create" %>
  <% end %>
</div>

<div id="show-actionables">
  <h3>Actions</h3> 
    <% @actionables.each do |actionable| %>
       <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= actionable.title %></h3>
        </div>
        <div class="panel-body">
          <%= actionable.text %>
        </div>
      </div> 
    <% end %> 
</div>

