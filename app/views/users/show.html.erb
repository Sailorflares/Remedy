<script>
  $(document).ready(function() {

      $('#calendar').fullCalendar({
          events: '/user/:id/events.json'
      })

  });
</script>
<h1>Home Page</h1>



<div class="modal fade condition-modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <%= form_for @condition, :url => create_condition_path, :html => {:method => :post} do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">What condition are you trying to improve?</h4>
        </div>
        <div class="modal-body">
            <%= f.label :name, "Name:" %>
            <%= f.text_field :name %><br>  
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary" name="commit">Create</button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Your Conditions</h3>
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".condition-modal">+</button>
      </div>
      <div class="panel-body">
        <% @conditions.each do |condition|%>
          <%= link_to condition.name, condition_path(condition.id)%><br>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">How are you feeling today?</h3>
      </div>
      <div class="panel-body">

      </div>
    </div>
  </div>

</div>

<ul class="nav nav-tabs">
  <li role="presentation" class="active"><a href="#">Home</a></li>
  <li role="presentation"><a href="#">Profile</a></li>
  <li role="presentation"><a href="#">Messages</a></li>
</ul>


<div id="add-actionable">
  <h3>Add an Action</h3>
  <%= form_for @actionable, :url => create_actionable_path, :html => {:method => :post} do |f| %>
    <%= f.label :title, "Title:" %>
    <%= f.text_field :title %><br>
    <%= f.label :text, "Description:" %>
    <%= f.text_field :text%><br>
    <%= f.fields_for :condition do |condition_form| %>
        <%= condition_form.label :id, "Condition:" %>
        <%= condition_form.collection_select :id, @conditions, :id, :name %>
    <% end %><br>
    <%= submit_tag "Create" %>
  <% end %>
</div>

<div id="add-actionable-event">
  <h3>Add an Actionable Event</h3>
  <%= form_for @actionableevent, :url => create_actionable_event_path, :html => {:method => :post} do |f| %>
    <%= f.label :days_between_events, "Frequency:" %>
    <%= f.text_field :days_between_events %><br>
    <%= f.fields_for :actionable do |actionable_form| %>
        <%= actionable_form.label :id, "Action:" %>
        <%= actionable_form.collection_select :id, @actionables, :id, :title %>
    <% end %><br>
    <%= submit_tag "Create" %>
  <% end %>
</div>

<div id="show-actionable">
  <h3>Actions</h3> 
    <% @actionables.each do |actionable| %>
       <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= actionable.title %></h3>
        </div>
        <div class="panel-body">
          <%= actionable.text %><br>
          <%= actionable.conditions.first.name if actionable.conditions.first %>
        </div>
      </div> 
    <% end %> 
</div>

<div id='calendar'></div>